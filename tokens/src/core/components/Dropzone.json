{
  "typography": {
    "$type": "dimension",
    "dropzone": {
      "restriction-msg": {
        "font-size": {
          "$value": "{typography.font.size.xs}",
          "source": "$dropzone-restriction-msg-font-size"
        }
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "dropzone": {
      "padding": {
        "$value": "1.5rem",
        "source": "$dropzone-padding"
      },
      "border": {
        "base": {
          "$value": "1px",
          "source": "$dropzone-border-default"
        }
      }
    }
  }
}
