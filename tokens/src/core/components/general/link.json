{
  "typography": {
    "link": {
      "decoration": {
        "base": { "value": "none", "source": "$link-decoration" },
        "hover": { "value": "underline", "source": "$link-hover-decoration" },
        "inline": {
          "base": { "value": "underline", "source": "$inline-link-decoration" },
          "hover": { "value": "underline", "source": "$inline-link-hover-decoration" }
        },
        "muted": {
          "base": { "value": "none", "source": "$muted-link-decoration" },
          "hover": { "value": "underline", "source": "$muted-link-hover-decoration" },
          "inline": {
            "base": { "value": "underline", "source": "$muted-inline-link-decoration" },
            "hover": { "value": "underline", "source": "$muted-inline-link-hover-decoration" }
          }
        },
        "brand": {
          "base": { "value": "none", "source": "$brand-link-decoration" },
          "hover": { "value": "underline", "source": "$brand-link-hover-decoration" },
          "inline": {
            "base": { "value": "underline", "source": "$brand-inline-link-decoration" },
            "hover": { "value": "underline", "source": "$brand-inline-link-hover-decoration" }
          }
        }
      }
    }
  }
}
