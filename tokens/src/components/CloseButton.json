{
  "color": {
    "close-button": { "value": "{color.black.value}", "source": "$close-color" }
  },
  "typography": {
    "close-button": {
      "font": {
        "size": { "value": "calc({font.size.base.value} * 1.5)", "source": "$close-font-size" },
        "weight": { "value": "{font.weight.bold.value}", "source": "$close-font-weight" }
      }
    }
  },
  "elevation": {
    "close-button": {
      "text-shadow": { "value": "0 1px 0 {color.white.value}", "source": "$close-text-shadow" }
    }
  }
}
