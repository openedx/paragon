{
  "product-tour": {
    "checkpoint": {
      "color": {
        "background": { "value": "{color.light.300.value}", "source": "$checkpoint-background-color" },
        "body": { "value": "{color.gray.700.value}", "source": "$checkpoint-body-color" },
        "border": { "value": "{color.brand.500.value}", "source": "$checkpoint-border-color" },
        "breadcrumb": { "value": "{color.primary.500.value}", "source": "$checkpoint-breadcrumb-color" },
        "box-shadow": {
          "value": "{color.black.value}",
          "source": "$checkpoint-box-shadow-color",
          "modify": [{
            "type": "alpha",
            "amount": 0.3
          }]
        }
      },
      "width": {
        "border": { "value": "8px", "source": "$checkpoint-border-width" },
        "arrow": { "value": "15px", "source": "$checkpoint-arrow-width" },
        "max": { "value": "480px", "source": "$checkpoint-max-width" }
      },
      "arrow": {
        "color": {
          "top": {
            "value": "solid {product-tour.checkpoint.width.arrow.value} {product-tour.checkpoint.width.border.value}",
            "source": "$checkpoint-arrow-top-color"
          },
          "default": {
            "value": "solid {product-tour.checkpoint.width.arrow.value} {product-tour.checkpoint.color.background.value}",
            "source": "$checkpoint-arrow-default-color"
          }
        },
        "transparent": {
          "value": "solid {product-tour.checkpoint.width.arrow.value} transparent",
          "source": "$checkpoint-arrow-transparent"
        }
      },
      "zindex": { "value": "1060", "source": "$checkpoint-z-index" }
    }
  }
}
