{
  "size": {
    "hr": {
      "border": {
        "width": { "value": "{size.border.width}", "source": "$hr-border-width" },
        "margin-y": { "value": "{spacing.spacer.base}", "source": "$hr-margin-y" }
      }
    }
  },
  "color": {
    "hr": {
      "border": {
        "value": "{color.black}",
        "source": "$hr-border-color",
        "modify": [{
          "type": "alpha",
          "amount": 0.1
        }]
      }
    }
  }
}
