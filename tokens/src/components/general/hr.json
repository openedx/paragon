{
  "size": {
    "hr": {
      "border": {
        "width": { "value": "{size.border.width}", "type": "dimension", "source": "$hr-border-width" },
        "margin-y": { "value": "{spacing.spacer.base}", "type": "dimension", "source": "$hr-margin-y" }
      }
    }
  },
  "color": {
    "hr": {
      "border": {
        "value": "{color.black}",
        "type": "color",
        "source": "$hr-border-color",
        "modify": [{ "type": "alpha", "amount": 0.1 }]
      }
    }
  }
}
