{
  "hr": {
    "border": {
      "color": { 
        "value": "{color.black.value}",
        "source": "$hr-border-color",
        "modify": [{
          "type": "alpha",
          "amount": 0.1
        }]
      },
      "width": { "value": "{size.border.width.value}", "source": "$hr-border-width" },
      "margin": {
        "y": { "value": "{spacer.base.value}", "source": "$hr-margin-y" }
      }
    }
  }
}
