{
  "color": {
    "$type": "color",
    "input": {
      "btn-focus": { "source": "$input-btn-focus-color", "$value": "{color.bg.active}" }
    }
  },
  "elevation": {
    "$type": "shadow",
    "input": {
      "btn-focus": {
        "box-shadow": {
          "source": "$input-btn-focus-box-shadow",
          "$value": "0 0 0 {size.input.btn.focus-width} {color.input.btn-focus}"
        }
      }
    }
  }
}
