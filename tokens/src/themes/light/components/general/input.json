{
  "color": {
    "input": {
      "btn-focus": { "value": "{color.bg.active}", "type": "color", "source": "$input-btn-focus-color" }
    }
  },
  "elevation": {
    "input": {
      "btn-focus": {
        "box-shadow": {
          "value": "0 0 0 {size.input.btn.focus-width} {color.input.btn-focus}",
          "type": "shadow",
          "source": "$input-btn-focus-box-shadow"
        }
      }
    }
  }
}
