{
  "color": {
    "$type": "color",
    "modal": {
      "content": {
        "bg": {
          "$value": "{color.bg.base}",
          "source": "$modal-content-bg"
        },
        "border": {
          "$value": "{color.black}",
          "modify": [
            {
              "type": "alpha",
              "amount": 0.2
            }
          ],
          "source": "$modal-content-border-color"
        }
      },
      "backdrop-bg": {
        "$value": "{color.black}",
        "source": "$modal-backdrop-bg"
      }
    }
  },
  "elevation": {
    "$type": "shadow",
    "modal": {
      "content": {
        "box-shadow": {
          "sm-up": {
            "$value": [
              {
                "color": "rgba(0, 0, 0, .15)",
                "offsetX": "0",
                "offsetY": "10px",
                "blur": "20px"
              },
              {
                "color": "rgba(0, 0, 0, .15)",
                "offsetX": "0",
                "offsetY": "8px",
                "blur": "20px"
              }
            ],
            "source": "$modal-content-box-shadow-sm-up"
          }
        }
      }
    }
  },
  "other": {
    "modal": {
      "opacity": {
        "$value": ".5",
        "source": "$modal-backdrop-opacity"
      }
    }
  }
}
