{
  "color": {
    "$type": "color",
    "close-button": { "source": "$close-color", "$value": "{color.black}" }
  },
  "elevation": {
    "$type": "shadow",
    "close-button": {
      "text-shadow": {
        "source": "$close-text-shadow",
        "$value": {
          "color": "{color.white}",
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "0"
        }
      }
    }
  }
}
