{
  "color": {
    "$type": "color",
    "image": {
      "figure-caption": {
        "$value": "{color.gray.500}",
        "source": "$figure-caption-color"
      },
      "thumbnail": {
        "bg": {
          "$value": "{color.body.bg}",
          "source": "$thumbnail-bg"
        },
        "border": {
          "$value": "{color.gray.200}",
          "source": "$thumbnail-border-color"
        }
      }
    }
  },
  "elevation": {
    "$type": "shadow",
    "image": {
      "thumbnail": {
        "box-shadow": {
          "$value": "none",
          "source": "$thumbnail-box-shadow"
        }
      }
    }
  }
}
