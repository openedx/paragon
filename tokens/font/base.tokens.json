{
  "$font": {
    "family": {
      "sans": {
        "serif": {
          "value": "-apple-system, BlinkMacSystemFont, \"Segoe UI\",\n  Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif, \"Apple Color Emoji\",\n  \"Segoe UI Emoji\", \"Segoe UI Symbol\", \"Noto Color Emoji\"",
          "themeable": true,
          "var": "font-family-sans-serif"
        }
      },
      "serif": { "value": "serif", "themeable": true, "var": "font-family-serif" },
      "monospace": {
        "value": "SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\",\n  \"Courier New\", monospace",
        "themeable": true,
        "var": "font-family-monospace"
      },
      "base": { "value": "{$font.family.sans.serif.value}", "themeable": true, "var": "font-family-base" }
    },
    "size": {
      "base": { "value": "1.125rem", "themeable": true, "var": "font-size-base" },
      "lg": { "value": "1.40625rem", "themeable": true, "var": "font-size-lg" },
      "sm": { "value": ".875rem", "themeable": true, "var": "font-size-sm" },
      "xs": { "value": ".75rem", "themeable": true, "var": "font-size-xs" }
    },
    "weight": {
      "lighter": { "value": "lighter", "themeable": true, "var": "font-weight-lighter" },
      "light": { "value": "300", "themeable": true, "var": "font-weight-light" },
      "normal": { "value": "400", "themeable": true, "var": "font-weight-normal" },
      "semi": {
        "bold": { "value": "500", "themeable": true, "var": "font-weight-semi-bold" }
      },
      "bold": { "value": "700", "themeable": true, "var": "font-weight-bold" },
      "bolder": { "value": "bolder", "themeable": true, "var": "font-weight-bolder" },
      "base": { "value": "{$font.weight.normal.value}", "themeable": true, "var": "font-weight-base" }
    }
  }
}
