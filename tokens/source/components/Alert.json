{
  "alert": {
    "padding": {
      "y": { "value": "1.5rem", "source": "$alert-padding-y" },
      "x": { "value": "1.5rem", "source": "$alert-padding-x" }
    },
    "margin": {
      "bottom": { "value": "1rem", "source": "$alert-margin-bottom" }
    },
    "border": {
      "radius": { "value": "{border.radius.base}", "source": "$alert-border-radius" },
      "width": { "value": "0", "source": "$alert-border-width" }
    },
    "font": {
      "weight": {
        "link": { "value": "{font.weight.normal.value}", "source": "$alert-link-font-weight" }
      },
      "size": { "value": ".875rem", "source": "$alert-font-size" }
    },
    "color": {
      "title": { "value": "{color.black.value}", "source": "$alert-title-color" },
      "content": { "value": "{color.gray.700.value}", "source": "$alert-content-color" }
    },
    "box-shadow": {
      "value": "0 1px 2px rgba(0, 0, 0, .15), 0 1px 4px rgba(0, 0, 0, .15)",
      "source": "$alert-box-shadow"
    },
    "icon": {
      "space": { "value": ".8rem", "source": "$alert-icon-space" }
    },
    "line-height": { "value": "1.5rem", "source": "$alert-line-height" },
    "actions-gap": { "value": "{spacer.3.value}", "source": "$alert-actions-gap" }
  }
}
