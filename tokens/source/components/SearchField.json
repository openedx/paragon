{
  "search-field": {
    "border": {
      "radius": { "value": "0", "source": "$search-border-radius" },
      "color": {
        "base": { "value": "{color.gray.500.value}", "source": "$search-border-color" },
        "interaction": { "value": "{color.black.value}", "source": "$search-border-color-interaction" },
        "focus": { "value": "{color.black.value}", "source": "$search-border-focus-color" }
      },
      "width": {
        "base": { "value": ".0625rem", "source": "$search-border-width" },
        "interaction": { "value": ".125rem", "source": "$search-border-width-interaction" },
        "focus": { "value": ".3125rem", "source": "$search-border-focus-width" }
      }
    },
    "line": {
      "height": { "value": "1.5rem", "source": "$search-line-height" }
    },
    "disabled": {
      "opacity": { "value": ".3", "source": "$search-disabled-opacity" }
    },
    "button": {
      "margin": { "value": ".5rem", "source": "$search-button-margin" },
      "variants": {
        "light": { "value": "{color.primary.500.value}" },
        "dark": { "value": "{color.brand.500.value}" }
      }
    },
    "input": {
      "height": {
        "search": {
          "value": "calc({form.input.line.height.base.value} * 1em + {form.input.padding.y.base.value} * 2)",
          "source": "$input-height-search"
        }
      }
    }
  }
}
