{
  "card": {
    "spacer": {
      "x": { "value": "1.25rem", "source": "$card-spacer-x" },
      "y": { "value": ".75rem", "source": "$card-spacer-y" }
    },
    "border": {
      "width": { "value": "{border.width.value}", "source": "$card-border-width" },
      "radius": {
        "base": { "value": "{border.radius.base.value}", "source": "$card-border-radius" },
        "image": { "value": ".3125rem", "source": "$card-image-border-radius" },
        "logo": { "value": ".25rem", "source": "$card-logo-border-radius" }
      },
      "color": {
        "base": { 
          "value": "{color.black.value}", 

          "source": "$card-border-color",
          "modify": [{
            "type": "alpha",
            "amount": 0.125
          }]
        },
        "focus": { 
          "value": "{color.black.value}", 

          "source": "$card-border-focus-color",
          "modify": [{
            "type": "alpha",
            "amount": 0.5
          }] 
        }
      }
    },
    "cap": {
      "bg": { 
        "value": "{color.black.value}", 

        "source": "$card-cap-bg",
        "modify": [{
          "type": "alpha",
          "amount": 0.03
        }] 
      },
      "color": { "value": "null", "source": "$card-cap-color" }
    },
    "height": {
      "base": { "value": "null", "source": "$card-height" }
    },
    "color": { "value": "null", "source": "$card-color" },
    "bg": { "value": "{color.background.base.value}", "source": "$card-bg" },
    "image": {
      "overlay": {
        "padding": { "value": "1.25rem", "source": "$card-img-overlay-padding" }
      },
      "horizontal": {
        "width": {
          "max": { "value": "240px", "source": "$card-image-horizontal-max-width" },
          "min": {
            "value": "{card.image.horizontal.width.max.value}",
            "source": "$card-image-horizontal-min-width"
          }
        }
      },
      "vertical": {
        "height": {
          "max": { "value": "140px", "source": "$card-image-vertical-max-height" }
        }
      }
    },
    "margin": {
      "group": { "value": "12px", "source": "$card-group-margin" },
      "deck": { "value": "{card.margin.group.value}", "source": "$card-deck-margin" },
      "grid": { "value": "{card.margin.group.value}", "source": "$card-grid-margin" }
    },
    "columns": {
      "count": { "value": "3", "source": "$card-columns-count" },
      "gap": { "value": "1.25rem", "source": "$card-columns-gap" },
      "margin": { "value": "{card.spacer.y.value}", "source": "$card-columns-margin" }
    },
    "divider": {
      "bg": { "value": "{color.light.400.value}", "source": "$card-divider-bg" },
      "margin": {
        "y": { "value": "{card.spacer.y.value}", "source": "$card-divider-margin-y" }
      }
    },
    "footer": {
      "action": {
        "gap": { "value": ".5rem", "source": "$card-footer-actions-gap" }
      },
      "text": {
        "font": {
          "size": { "value": "{font.size.small.x.value}", "source": "$card-footer-text-font-size" }
        }
      }
    },
    "logo": {
      "left": {
        "offset": {
          "base": { "value": "1.5rem", "source": "$card-logo-left-offset" },
          "horizontal": { "value": ".4375rem", "source": "$card-logo-left-offset-horizontal" }
        }
      },
      "bottom": {
        "offset": {
          "base": { "value": "1rem", "source": "$card-logo-bottom-offset" },
          "horizontal": { "value": ".4375rem", "source": "$card-logo-bottom-offset-horizontal" }
        }
      },
      "width": { "value": "7.25rem", "source": "$card-logo-width" },
      "height": { "value": "4.125rem", "source": "$card-logo-height" }
    },
    "loading": {
      "skeleton": {
        "spacer": { "value": ".313rem", "source": "$loading-skeleton-spacer" }
      }
    }
  }
}
