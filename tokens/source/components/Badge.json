        "base": { "value": ".25rem", "source": "$badge-border-radius" },
        "pill": { "value": "10rem", "source": "$badge-pill-border-radius" }
      }
    },
    "transition": { "value": "none", "source": "$badge-transition" },
    "focus": {
      "width": {"value": "{input.btn.focus.width.value}", "source": "$badge-focus-width"}
    },
    "color": {
