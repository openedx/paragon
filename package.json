{
  "name": "@edx/paragon",
  "version": "0.0.0-development",
  "description": "Accessible, responsive UI component library based on Bootstrap.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edx/paragon.git"
  },
  "files": [
    "/dist",
    "/icons",
    "/src",
    "/scss"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "make build",
    "build-docs": "cd ./www && \"$npm_execpath\" install && \"$npm_execpath\" run build",
    "build-docs:with-theme": "cd ./www && \"$npm_execpath\" install && \"$npm_execpath\" run build:with-theme",
    "commit": "commit",
    "debug-test": "node --inspect-brk node_modules/.bin/jest --runInBand --coverage",
    "lint": "eslint --ext .js --ext .jsx .",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "snapshot": "jest --updateSnapshot",
    "start": "echo 'To start the Paragon documentation site: cd www/ && npm i && npm start'",
    "test": "jest --coverage",
    "generate-component": "node component-generator/index.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@popperjs/core": "^2.11.2",
    "airbnb-prop-types": "^2.12.0",
    "bootstrap": "4.6.0",
    "classnames": "^2.3.1",
    "email-prop-type": "^3.0.0",
    "font-awesome": "^4.7.0",
    "lodash.uniqby": "^4.7.0",
    "mailto-link": "^1.0.0",
    "prop-types": "^15.8.1",
    "react-bootstrap": "^1.6.4",
    "react-focus-on": "^3.5.4",
    "react-popper": "^2.2.5",
    "react-proptype-conditional-require": "^1.0.4",
    "react-responsive": "^8.2.0",
    "react-table": "^7.7.0",
    "react-transition-group": "^4.4.2",
    "tabbable": "^4.0.0",
    "uncontrollable": "7.2.1"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@edx/eslint-config": "^2.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.2.3",
    "commander": "^7.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.0.0",
    "jest-cli": "^25.0.0",
    "markdown-loader-jest": "^0.1.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.14.0",
    "sass": "^1.32.13",
    "semantic-release": "^17.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.md?$": "markdown-loader-jest",
      "^.+\\.jsx?$": "babel-jest",
      "^icons/index.js$": "babel-jest"
    },
    "setupFiles": [
      "./src/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/setupTest.js",
      "src/index.js",
      "/tests/",
      "/www/",
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/www/",
      "/dist/",
      "/dependent-usage-analyzer/",
      "/component-generator/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@edx/paragon)/).*/"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
